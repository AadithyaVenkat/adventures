doctype html
html
    include includes/header.pug
    
    body(ng-app="angularApp" ng-controller="mainCtrl")
        div.mobile-nav
            a(href="/index.html")
                img(src="images/logo.png")
            p(ng-click="showMenu = !showMenu") &#9776;
        div.nav(ng-show="showMenu")
            div.close
                p(ng-click="showMenu = !showMenu") &#10006;
            ul
                li
                    a(href="/index.html")
                        img(src="images/logo.png")
                li.home
                    a(href="/index.html") HOME
                li
                    a(href="/index.html##about") ABOUT
                li
                    a(href="/index.html##locations") LOCATIONS
               
        div.home
            div.hero-image
            div.about-row#about
                div.about-info
                    h1 Hello.
                    p Lorem ipsum dolor sit amet, consectetur adipsicing elit. Phal non risus no metus blah blah blah.
                div.about-image
            div.map-section#map-section(ng-controller="postsCtrl")
                div.title
                    h1 Where I've Been
                div.map(ng-init="initMap();")
                    div#map
                div.locations-grid.container#locations
                    ul
                        li.location-tile(ng-repeat="post in posts" id="{{post.acf.title | removeSpaces}}")
                            div.location-hover
                                a.location-info(href="/single.html")
                                    h2 {{post.title.rendered}}
                                    h4 {{post.date | date:'MMMM yyyy'}}
                            div.location-image(ng-style="{'background-image':'url({{post.acf.thumbnail_image}})'}")      
        include includes/footer.pug    